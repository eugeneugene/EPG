<Window x:Class="EPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <StackPanel>
        <Menu           
            Height="25"
            VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Command="ApplicationCommands.Close" Header="Exit" />
            </MenuItem>
            <MenuItem Header="Edit"/>
        </Menu>
        <GroupBox Header="Options" Margin="5">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Column="0" Header="Mode">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>
                        <RadioButton Content="Random" Margin="5" Grid.Row="0"/>
                        <CheckBox Content="Show hyphenated passwords" Margin="10,5,5,5" Grid.Row="1" />
                        <RadioButton Content="Pronounceable" Margin="5" Grid.Row="2"/>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="1" Header="Amount &amp; Length">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Number of passwords:" Margin="3"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Margin="3" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Minimum length:" Margin="3"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Margin="3"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Maximum length:" Margin="3"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Margin="3"/>
                    </Grid>
                </GroupBox>
                <Button Grid.Column="2" Content="Generate" VerticalAlignment="Center" Width="80" IsDefault="True" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Character set" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <CheckBox  Grid.Row="0" Grid.Column="0" Content="Small symbols" Margin="3"/>
                <CheckBox  Grid.Row="1" Grid.Column="0" Content="Capital symbols" Margin="3"/>
                <CheckBox  Grid.Row="0" Grid.Column="1" Content="Numerals" Margin="3"/>
                <CheckBox  Grid.Row="1" Grid.Column="1" Content="Special symbols" Margin="3"/>
                <Grid  Grid.Row="0" Grid.Column="2" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Exclude symbols:" Margin="3"/>
                    <TextBlock Grid.Column="1" Margin="3" />
                </Grid>
                <Grid  Grid.Row="1" Grid.Column="2" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Include symbols:" Margin="3"/>
                    <TextBlock Grid.Column="1" Margin="3" />
                </Grid>
            </Grid>
        </GroupBox>
        <GroupBox Header="Restrictions" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <CheckBox Content="Enable Bloom filter" Grid.Row="0" Grid.Column="0" Margin="3"/>
                <CheckBox Content="Paranoid check" Grid.Row="1" Grid.Column="0" Margin="3"/>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Filter:" Grid.Column="0" Margin="3"/>
                    <TextBox  Grid.Column="1" Margin="3"/>
                    <Button Content="Browse" Grid.Column="2" Margin="3"/>
                </Grid>
                <CheckBox Content="Calculate quality" Grid.Row="1" Grid.Column="1" Margin="3"/>
            </Grid>
        </GroupBox>
        <DataGrid Visibility="Hidden"/>
    </StackPanel>
</Window>
